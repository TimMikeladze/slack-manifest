{
  "name": "slack-manifest-tools",
  "version": "0.0.1",
  "description": "Keep Slack app manifests in sync between dev, preview, and production environments",
  "author": "Tim Mikeladze <tim.mikeladze@gmail.com>",
  "keywords": [
    "slack",
    "manifest",
    "slack app"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/TimMikeladze/slack-manifest-tools.git"
  },
  "license": "MIT",
  "files": [
    "./dist"
  ],
  "type": "module",
  "source": "src/index.ts",
  "exports": {
    "require": "./dist/index.cjs",
    "default": "./dist/index.modern.js"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.module.js",
  "unpkg": "./dist/index.umd.js",
  "bin": "./dist/cli.js",
  "scripts": {
    "dev": "microbundle watch src/{index,cli}.ts",
    "build": "microbundle src/{index,cli}.ts",
    "lint": "eslint --fix {src,__tests__}/**/*.ts",
    "test": "jest --coverage"
  },
  "lint-staged": {
    "*.ts": "eslint --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/glob": "7.2.0",
    "@types/jest": "27.4.0",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "dotenv": "15.0.0",
    "eslint": "8.8.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "6.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "lint-staged": "12.3.3",
    "microbundle": "0.14.2",
    "ts-jest": "27.1.3",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@slack/web-api": "^6.6.0",
    "commander": "9.0.0",
    "glob": "7.2.0",
    "node-fetch": "^3.2.0",
    "replace-in-file": "^6.3.2"
  }
}
